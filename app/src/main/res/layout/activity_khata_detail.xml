<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.KhataDetailActivity">

    <ProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:theme="@style/AppTheme.PrimaryColor"
        android:layout_height="70dp" />


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarKhataDetails"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_below="@+id/appBar"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_margin="2dp"
                    android:padding="5dp"
                    android:background="@color/colorBlueTrans"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:text="Description"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_margin="2dp"
                    android:padding="5dp"
                    android:background="@color/colorBlueTrans"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:text="Date / Time"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_margin="2dp"
                    android:padding="5dp"
                    android:background="@color/colorBlueTrans"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:text="Send"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_margin="2dp"
                    android:padding="5dp"
                    android:background="@color/colorBlueTrans"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:text="Recieve"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <ListView
                android:id="@+id/khatadetailList"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>