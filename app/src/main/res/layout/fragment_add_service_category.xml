<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.AddServiceCategoryFragment">
    <LinearLayout
android:background="@drawable/side_nav_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="0dp"
    android:background="@drawable/linear_one"
    android:layout_margin="10dp"
    android:id="@+id/carviewLivingServices"
    android:layout_height="220dp"
    android:layout_weight="1"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:id="@+id/linearlayout_LivingService"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_LivingService"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:src="@drawable/house_csp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorBlue"
        android:padding="10dp"/>
    <TextView
        android:textColor="@color/colorBlue"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:text="Living Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:id="@+id/cardviewFood"
        android:layout_height="220dp"
        android:layout_weight="1"
        android:elevation="10dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:id="@+id/linearlayout_Food"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_foodservice"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:src="@drawable/lunch_box"
                app:civ_border_width="2dp"
                android:padding="10dp"
                app:civ_border_color="@color/colorBlue"/>
            <TextView
                android:textColor="@color/colorBlue"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_below="@+id/image_foodservice"
                android:text="Food/Mess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:id="@+id/cardviewCoaching"
                android:layout_height="220dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:id="@+id/linearlayout_Coachings"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/image_CoachingService"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:src="@drawable/coachings"
                        app:civ_border_width="2dp"
                        android:padding="10dp"
                        app:civ_border_color="@color/colorBlue"/>
                    <TextView
                        android:textColor="@color/colorBlue"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_below="@+id/image_CoachingService"
                        android:text="Coachings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_weight="1"

                android:id="@+id/cardviewJob"
                android:layout_margin="10dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:id="@+id/linearlayout_JobPortal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/image_JobService"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:src="@drawable/job_hiring"
                        app:civ_border_width="2dp"
                        android:padding="10dp"
                        app:civ_border_color="@color/colorBlue"/>
                    <TextView
                        android:textColor="@color/colorBlue"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="Job Portal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>