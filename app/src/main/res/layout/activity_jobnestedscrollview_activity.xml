<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet"
    android:background="@drawable/side_nav_bar"
    tools:context=".Activity.jobnestedscrollview_activity">
    <TextView
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job Description"
        android:textAllCaps="false"
        android:textSize="35dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/colorBlack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="Job Title"
            android:textAllCaps="false"
          android:gravity="center"
            android:textSize="30sp"/>
        <Spinner
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:background="@drawable/background_design_image"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/colorBlack"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:text="Job Location"
            android:gravity="center"
            android:textSize="35dp"/>
        <Spinner
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.275"
            android:background="@drawable/background_design_image"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:textColor="@color/colorBlack"
            android:text="Job Timing"
            android:textSize="30dp"
            android:textAllCaps="false"/>
        <RadioGroup
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:id="@+id/radiogroupmesscheck">
            <RadioButton
                android:checked="false"
                android:layout_width="match_parent"
                android:id="@+id/radioyes"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content"
                android:text="Part Time"
                android:textSize="25dp"
                android:textAllCaps="false" />
            <RadioButton
                android:textColor="@color/colorBlack"
                android:checked="false"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:id="@+id/radiono"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Full TIme"
                android:textAllCaps="false" />
        </RadioGroup>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="Upload Resume"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_design_image"/>

</LinearLayout>