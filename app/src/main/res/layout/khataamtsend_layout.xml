<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Sended Amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textSize="15dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/colorBlueTrans"
                android:id="@+id/edSendedAmt"
                android:layout_margin="5dp"
                android:textColor="@color/colorGreenDark"
                android:inputType="number"
                android:hint="Amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_Sended_mode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:entries="@array/amt_option"
                android:popupBackground="@color/colorPrimary"
                android:spinnerMode="dropdown"
                android:textColor="@color/colorBlackTrans">

            </Spinner>

        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textSize="15dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/colorBlackTrans"
                android:id="@+id/edSendedDescription"
                android:layout_margin="5dp"
                android:textColor="@color/colorGreenDark"
                android:inputType="text"
                android:hint="Description"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:id="@+id/btnSaveSended"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>