<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/logo3"
                android:layout_width="140dp"
                android:layout_height="140dp" />

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_margin="10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="35dp"
                    android:textColor="@color/colorGreenDark"
                    android:textStyle="bold"
                    android:text="ZARURAT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/colorGreenDark"
                    android:textStyle="bold"
                    android:text="Version 1.0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="Agriculture in India is growing with the introduction of the Green Revolution, the White Revolution, and Golden Revolution and Horticulture Revolutions. Agriculture experts have brought smart farming technologies that enabled them to reduce costs, maximize yields and increase profits. And there is perhaps a no better example of smart farming than with the ‘mobile app’."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="*Developed By Pradeep Kumar Suthar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>