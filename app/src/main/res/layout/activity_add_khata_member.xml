<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddKhataMemberActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarKhataAdd"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.design.widget.TextInputLayout
            android:layout_margin="5dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="15dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/colorBlackTrans"
                android:id="@+id/khataMembername"
                android:layout_margin="5dp"
                android:textColor="@color/colorBlack"
                android:inputType="text"
                android:hint="Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_margin="5dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="15dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/colorBlackTrans"
                android:id="@+id/khataMemberEmail"
                android:layout_margin="5dp"
                android:textColor="@color/colorBlack"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_margin="5dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="15dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/colorBlackTrans"
                android:id="@+id/khataMembermobile"
                android:layout_margin="5dp"
                android:textColor="@color/colorBlack"
                android:inputType="number"
                android:hint="Mobile No."
                android:maxLength="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_margin="5dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="15dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/colorBlackTrans"
                android:id="@+id/baseprice"
                android:layout_margin="5dp"
                android:textColor="@color/colorBlack"
                android:inputType="number"
                android:hint="Base Amount"
                android:maxLength="6"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_margin="5dp"
            android:textColorHint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="15dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColorHint="@color/colorBlackTrans"
                android:id="@+id/KhataDescription"
                android:layout_margin="5dp"
                android:textColor="@color/colorBlack"
                android:inputType="text"
                android:hint="Amount Description"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_below="@+id/imagelogo2"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonGive"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"
                android:layout_margin="5dp"
                android:text="Give"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/buttonTake"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"
                android:layout_margin="5dp"
                android:text="Take"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:fontFamily="sans-serif-smallcaps"
            android:layout_margin="10dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:id="@+id/buttonSave"
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>