<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.KhataDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarKhataDetails"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:id="@+id/textkhataDetailName"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="3dp"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif"
                        android:text="Name"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/btnShare"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_share_black_24dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerviewAmount"
        android:layout_margin="5dp"
        android:layout_below="@+id/appBar"
        android:layout_above="@+id/llfinalAmount"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/llfinalAmount"
        android:layout_margin="10dp"
        android:weightSum="2"
        android:layout_above="@+id/llAmount"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Final Amount -"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textFinalAmount"
            android:textStyle="bold"
            android:textColor="@color/colorGreenDark"
            android:textSize="22sp"
            android:layout_marginRight="10dp"
            android:textAlignment="textEnd"
            android:text="Rs 500"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAmount"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <LinearLayout
            android:weightSum="3"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edittextAmount"
                android:textSize="18sp"
                android:hint="Amount"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnGive"
                android:layout_margin="5dp"
                android:background="@color/colorAccent"
                android:text="Give"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/btnTake"
                android:layout_margin="5dp"
                android:background="@color/colorAccent"
                android:text="Take"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp" />

        </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edittextDescription"
                android:textSize="18sp"
                android:hint="Description"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSave"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:text="Save"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="30dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>