<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.KhataFragment">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/khatalayout1"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="200dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardAddKhata"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/users3_add"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="ADD"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cardRemoveKhata"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp" >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/user_delete"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="Remove"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerviewKhata1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/khatalayout1"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorAccent">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</FrameLayout>