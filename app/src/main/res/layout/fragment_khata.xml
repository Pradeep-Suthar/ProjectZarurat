<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.KhataFragment">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="50dp">

        <FrameLayout
            android:background="@color/colorPrimary"
            android:id="@+id/fragAddKhata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvAddKhata"
                android:layout_gravity="center"
                android:text="Add Member"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/khataview_1"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </FrameLayout>

        <FrameLayout
        android:background="@color/colorPrimary"
        android:id="@+id/fraglen_den"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvlen_den"
            android:layout_gravity="center"
            android:text="Transection"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/khataview_2"
            android:visibility="invisible"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </FrameLayout>

        <FrameLayout
            android:background="@color/colorPrimary"
            android:id="@+id/fragKhataRemove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvKhataRemove"
                android:layout_gravity="center"
                android:text="Remove "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/khataview_3"
                android:visibility="invisible"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        </FrameLayout>
    </com.google.android.flexbox.FlexboxLayout>

    <FrameLayout
        android:id="@+id/containerPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>